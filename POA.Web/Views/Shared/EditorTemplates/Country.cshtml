

@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Web;
@using System.Web.Mvc;
@using System.Web.Optimization;
@using StructureMap.TypeRules;
@using POA.Web.Infrastructure.Tasks;
@using POA.Domain
@using POA.Web.Infrastructure
@using System.Data.Entity.SqlServer
@using StructureMap

@model string
@using (POADBEntities _context = new POADBEntities())
{
    
    
    var availableCountries = _context.Countries.Select(u => new SelectListItem
    {
        Text = u.Name,
        Value = SqlFunctions.StringConvert((double)u.Country_ID).Trim(),
        Selected = SqlFunctions.StringConvert((double)u.Country_ID).Trim() == Model
    }).ToArray();

    
   @Html.DropDownList("", availableCountries, new { @class = "form-control" }) 
}

