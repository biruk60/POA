
@model POA.Web.Models.Agent.AgentDetailsViewModel

@{
    ViewBag.Title = Model.First_Name;
}



<div class="well">
    <p class="lead">
        @Model.First_Name
    </p>

    <p class="lead">
        @Model.Last_Name
    </p>
</div>
<div>
    @using (Html.BeginForm("Delete", "Agent", new { id = Model.Agent_ID }, FormMethod.Post, new { id = "delete-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ActionLink("Edit User", "Edit", "Agent", new { id = Model.Agent_ID }, new { @class = "btn btn-primary" })
        <button type="submit" class="btn btn-warning">Delete User</button>
        @Html.ActionLink("Cancel", "Cancel", "Agent", new { @class = "btn btn-primary" })
    }

</div>



@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Are you sure you wish to delete this user?  You cannot undo this action.");
            });
        });
    </script>
}
