
@model POA.Web.Models.Template.TemplateSummaryViewModel[]
<br />
<br />
<div>
    @Html.ActionLink("Create New Template", "New", "Template", new { @class = "btn btn-primary" })
</div>
<table class="table table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var Template in Model)
        {
            <tr>
                <td>@Html.ActionLink(@Template.Name, "View", "Template", routeValues: new { id = @Template.Template_ID }, htmlAttributes: null)</td>
                <td>@Template.Content</td>

            </tr>
        }
    </tbody>
</table>

