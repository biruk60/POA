
@model POA.Web.Models.SubCategory.SubCategoryDetailsViewModel

@{
    ViewBag.Category = Model.Name;
}



<div class="well">
    <p class="lead">
        @Model.Name
    </p>

    <p class="lead">
        @Model.Description
    </p>
</div>
<div>
    @using (Html.BeginForm("Delete", "SubCategory", new { id = Model.SubCategory_ID }, FormMethod.Post, new { id = "delete-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ActionLink("Edit SubCategory", "Edit", "SubCategory", new { id = Model.SubCategory_ID }, new { @class = "btn btn-primary" })
        <button type="submit" class="btn btn-warning">Delete SubCategory</button>
        @Html.ActionLink("Cancel", "Cancel", "SubCategory", new { @class = "btn btn-primary" })
    }

</div>



@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Are you sure you wish to delete this SubCategory?  You cannot undo this action.");
            });
        });
    </script>
}
