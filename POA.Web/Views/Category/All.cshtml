@model POA.Web.Models.Category.CategorySummaryViewModel[]
<br />
<br />
<div>
    @Html.ActionLink("Create New Category", "New", "Category", new { @class = "btn btn-primary" })
</div>
<table class="table table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var category in Model)
        {
            <tr>
                <td>@Html.ActionLink(@category.Name, "View", "Category", routeValues: new { id = @category.Category_ID }, htmlAttributes: null)</td>
                <td>@category.Description</td>

            </tr>
        }
    </tbody>
</table>

