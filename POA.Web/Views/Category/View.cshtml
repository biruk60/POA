
@model POA.Web.Models.Category.CategoryDetailsViewModel

@{
    ViewBag.Category = Model.Name;
}

<h2>
    @*<img src="~/Content/IssueTypes/@(Model.IssueType).png" /> @Model.Subject
        <small class="pull-right">Received @Model.CreatedAt from @Model.CreatorUserName</small>*@
</h2>

<div class="well">
    <p class="lead">
        @Model.Name
    </p>

    <p class="lead">
        @Model.Description
    </p>
</div>
<div>
    @using (Html.BeginForm("Delete", "Category", new { id = Model.Category_ID }, FormMethod.Post, new { id = "delete-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ActionLink("Edit Category", "Edit", "Category", new { id = Model.Category_ID }, new { @class = "btn btn-primary" })
        <button type="submit" class="btn btn-warning">Delete Category</button>
        @Html.ActionLink("Cancel", "Cancel", "Category", new { @class = "btn btn-primary" })
    }

</div>



@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Are you sure you wish to delete this Category?  You cannot undo this action.");
            });
        });
    </script>
}
