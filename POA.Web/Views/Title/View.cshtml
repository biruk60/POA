@model POA.Web.Models.Title.TitleDetailsViewModel

@{
    ViewBag.Title = Model.Title_Name;
}

<h2>
    @*<img src="~/Content/IssueTypes/@(Model.IssueType).png" /> @Model.Subject
        <small class="pull-right">Received @Model.CreatedAt from @Model.CreatorUserName</small>*@
</h2>

<div class="well">
    <p class="lead">
        @Model.Title_Name
    </p>

    <p class="lead">
        @Model.Title_Description
    </p>
</div>
<div>
    @using (Html.BeginForm("Delete", "Title", new { id = Model.Title_ID }, FormMethod.Post, new { id = "delete-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ActionLink("Edit Title", "Edit", "Title", new { id = Model.Title_ID }, new { @class = "btn btn-primary" })
        <button type="submit" class="btn btn-warning">Delete Title</button>
        @Html.ActionLink("Cancel", "Cancel", "Title", new { @class = "btn btn-primary" })
    }

</div>



@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Are you sure you wish to delete this title?  You cannot undo this action.");
            });
        });
    </script>
}
